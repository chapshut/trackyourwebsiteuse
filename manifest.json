{
  "manifest_version": 3,
  "name": "Time Tracker",
  "version": "4.1",
  "description": "Beautiful live time tracking with daily & weekly averages",

  "permissions": ["storage", "tabs", "idle"],
  "host_permissions": ["<all_urls>"],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "Time Tracker"
  },

  "icons": { "128": "icon.png" }
}
